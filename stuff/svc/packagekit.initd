description="PackageKit upgrade"

start() {
	if [ -f "/system-update" ]; then
		mkdir -p /run/dbus
		dbus-daemon --system
		/usr/lib/PackageKit/pk-offline-update
		if [ $? -eq 0 ]; then
			reboot -f
		else
			echo "Failed to upgrade system!"
			mksh
			reboot -f
		fi
	fi
}
